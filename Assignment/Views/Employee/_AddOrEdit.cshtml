@model Assignment.Models.Employee

<div class="modal fade" tabindex="-1" role="dialog" id="AddEmployee">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <form asp-controller="Employee" asp-action="AddOrEdit" method="POST">
                    <div class="col-lg-12 mx-auto">
                        <h3 class="text-capitalize">Employee Table</h3>
                        <input asp-for="EmployeeId" class="sr-only" />
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>FatherName</label>
                            <input type="text" class="form-control" placeholder="Enter Father Name" asp-for="FatherName" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>Designation</label><br />
                            <select asp-for="DesignationID" class="form-control" asp-items="@ViewBag.Designation"> </select>
                        </div>
                        <div class="form-group">
                            <label>Department</label><br />
                            <select asp-for="DepartmentID" class="form-control" asp-items="@ViewBag.Department"> </select>
                        </div>
                        <div class="form-group">
                            <label>Salary</label>
                            <input type="text" class="form-control" placeholder="Enter Salary" asp-for="Salary" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>IsActive</label>
                            <input type="text" class="form-control"  asp-for="IsActive" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>Joining Date</label>
                            <div class='input-group date'>
                                <input type="text" class="form-control datepicker" asp-for="JoiningDate" placeholder="Enter Date" />
                                <span class="input-group-addon">
                                    <span class="glyphicon glyphicon-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success" data-toggle="ajax-modal-post" data-reload="myTable">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

