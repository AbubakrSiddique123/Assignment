@model Assignment.Models.Designation
<div class="modal fade" tabindex="-1" role="dialog" id="AddDesignation">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">

                <form asp-controller="Designation"  asp-action="Add" method="POST">
                    <div class="col-lg-12 mx-auto">
                        <h3 class="text-capitalize">Add Designation</h3>
                        <input asp-for="DesignationId" class="sr-only" />
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" placeholder="Enter Name" asp-for="Name" autocomplete="off" />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-success" data-toggle="ajax-modal-post" data-reload="myTable">Submit </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
